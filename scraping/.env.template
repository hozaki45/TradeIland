# TradeIland スクレイピング環境変数テンプレート
# このファイルをコピーして .env ファイルを作成してください

# 認証情報
SCRAPING_USERNAME=your_username_here
SCRAPING_PASSWORD=your_password_here

# ターゲットサイト設定
TARGET_SITE_BASE_URL=https://example.com
TARGET_SITE_LOGIN_URL=https://example.com/login
TARGET_SITE_DATA_URL=https://example.com/data

# ログレベル（DEBUG, INFO, WARNING, ERROR）
LOG_LEVEL=INFO

# 出力ディレクトリ
OUTPUT_DIR=output

# デバッグモード（true/false）
DEBUG_MODE=false

# ブラウザ設定
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30

# データベース接続（オプション）
# DATABASE_URL=sqlite:///tradeiland.db